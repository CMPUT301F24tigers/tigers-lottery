<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondary_background_cards"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_background_cards"
        android:padding="8dp">

        <!-- Event ID (Hidden) -->
        <TextView
            android:id="@+id/eventId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="14sp" />

        <!-- Organizer ID (Hidden) -->
        <TextView
            android:id="@+id/organizerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="14sp" />

        <!-- Waitlist Limit (Hidden) -->
        <TextView
            android:id="@+id/waitlistLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="14sp" />

        <!-- Event Icon -->

        <ImageView
            android:id="@+id/eventIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/circular_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/eventName"
            android:layout_width="265dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:text="Event 1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/eventGeolocation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/eventIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Event Date -->
        <TextView
            android:id="@+id/eventGeolocation"
            android:layout_width="262dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:text="Location: UofA"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/eventDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/eventName"
            app:layout_constraintTop_toBottomOf="@id/eventName" />

        <!-- Options Menu Icon -->
        <TextView
            android:id="@+id/eventDate"
            android:layout_width="259dp"
            android:layout_height="33dp"
            android:layout_marginTop="4dp"
            android:text="Date: October 19, 2024"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/eventGeolocation"
            app:layout_constraintTop_toBottomOf="@+id/eventGeolocation" />

        <ImageView
            android:id="@+id/optionsMenu"
            android:layout_width="29dp"
            android:layout_height="30dp"
            android:contentDescription="Options menu"
            android:src="@android:drawable/ic_menu_more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/eventName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
