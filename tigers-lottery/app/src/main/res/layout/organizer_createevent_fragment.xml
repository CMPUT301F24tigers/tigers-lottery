<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/titleCreateEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an Event"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Placeholder for Photo/Poster -->
        <FrameLayout
            android:id="@+id/photoPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#D3D3D3"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poster Placeholder"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="#808080" />
        </FrameLayout>

        <!-- Event Name Input -->
        <EditText
            android:id="@+id/inputEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Name"
            android:layout_marginBottom="12dp"
            android:inputType="text" />

        <!-- Location Input -->
        <EditText
            android:id="@+id/inputEventLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:layout_marginBottom="12dp"
            android:inputType="text" />

        <!-- Registration Opens Input -->
        <EditText
            android:id="@+id/inputRegistrationOpens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registration Opens (YYYY-MM-DD)"
            android:layout_marginBottom="12dp"
            android:inputType="date" />

        <!-- Registration Deadline Input -->
        <EditText
            android:id="@+id/inputRegistrationDeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registration Deadline (YYYY-MM-DD)"
            android:layout_marginBottom="12dp"
            android:inputType="date" />

        <!-- Event Date Input -->
        <EditText
            android:id="@+id/inputEventDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Date (YYYY-MM-DD)"
            android:layout_marginBottom="12dp"
            android:inputType="date" />

        <!-- Description Input -->
        <EditText
            android:id="@+id/inputEventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:layout_marginBottom="12dp" />

        <!-- Checkbox for Waitlist Limit -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/checkboxWaitlistLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assign Waitlist Limit?"
                android:paddingStart="8dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Waitlist Limit Input (visible only when checkbox is checked) -->
        <EditText
            android:id="@+id/inputWaitlistLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set Waitlist Limit"
            android:inputType="number"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnCreateEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Event" />
    </LinearLayout>
</ScrollView>
