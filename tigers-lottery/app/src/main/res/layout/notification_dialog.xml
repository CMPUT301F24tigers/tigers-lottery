<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Notification Type (Title) -->
    <TextView
        android:id="@+id/notificationDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification Type"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp" />

    <!-- Priority Label -->
    <TextView
        android:id="@+id/notificationDialogPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="High Priority"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_priority_background"
        android:gravity="center" />

    <!-- Notification Details -->
    <TextView
        android:id="@+id/notificationDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification Message"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <!-- Event Name (From Metadata) -->
    <TextView
        android:id="@+id/notificationDialogEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Name: Sample Event"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/notificationDialogTimestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sent: Nov 25, 2024 - 10:00 AM"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/notificationDialogCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category: System"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp" />

    <!-- Action URL Button -->
    <Button
        android:id="@+id/btnActionUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take action"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white" />

</LinearLayout>
